  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Scarmonit/ok-computer-mcp.git"
  },
  "homepage": "https://github.com/Scarmonit/ok-computer-mcp#readme",
  "bugs": {
    "url": "https://github.com/Scarmonit/ok-computer-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
