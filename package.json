{
  "name": "ok-computer-mcp",
  "version": "1.5.0",
  "description": "A self-improving MCP server with learning capabilities, TypeScript strict mode, and security hardening",
  "main": "dist/index.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "bin": {
    "ok-computer-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node dist/index.js",
    "dev": "node --watch src/index.js",
